DROP TABLE IF EXISTS yetkazib_beruvchilar



CREATE TABLE IF NOT EXISTS yetkazib_beruvchilar(
	yetkazib_beruvchi_idsi SERIAL PRIMARY KEY,
	kompaniya_nomi VARCHAR(50),
	telefon_raqam VARCHAR,
	manzil VARCHAR
);


