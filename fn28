-- 4-misol



DROP TABLE IF EXISTS employees


CREATE TABLE IF NOT EXISTS employees(
	user_id SERIAL PRIMARY KEY,
	employee_name VARCHAR(30),
	employee_position VARCHAR,
	salary_year INTEGER 
);

select * from EMPLOYEES

